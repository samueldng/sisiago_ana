# ===========================================
# CONFIGURAÇÕES DE BANCO DE DADOS
# ===========================================

# Database URL - Supabase (obrigatório)
DATABASE_URL="postgresql://postgres:[YOUR-PASSWORD]@db.[YOUR-PROJECT-REF].supabase.co:5432/postgres"

# Supabase Configuration (obrigatório)
NEXT_PUBLIC_SUPABASE_URL="https://your-project-ref.supabase.co"
NEXT_PUBLIC_SUPABASE_ANON_KEY="your-anon-key-here"
SUPABASE_SERVICE_ROLE_KEY="your-service-role-key-here"

# ===========================================
# AUTENTICAÇÃO E SEGURANÇA
# ===========================================

# JWT Secret para autenticação (obrigatório)
JWT_SECRET="your-super-secret-jwt-key-minimum-32-characters"

# NextAuth Configuration
NEXTAUTH_SECRET="your-nextauth-secret-key-here"
NEXTAUTH_URL="http://localhost:3000"

# ===========================================
# CONFIGURAÇÕES DE AMBIENTE
# ===========================================

# Environment (development, production, test)
NODE_ENV="development"

# Application URL
NEXT_PUBLIC_APP_URL="http://localhost:3000"

# ===========================================
# CONFIGURAÇÕES DE PRODUÇÃO
# ===========================================

# Para produção na Vercel:
# NEXTAUTH_URL="https://your-app.vercel.app"
# NEXT_PUBLIC_APP_URL="https://your-app.vercel.app"
# NODE_ENV="production"

# Para produção com Docker:
# NEXTAUTH_URL="https://your-domain.com"
# NEXT_PUBLIC_APP_URL="https://your-domain.com"
# NODE_ENV="production"

# ===========================================
# CONFIGURAÇÕES OPCIONAIS
# ===========================================

# Logging Level (error, warn, info, debug)
LOG_LEVEL="info"

# Enable/Disable audit logging
ENABLE_AUDIT_LOGS="true"

# Session timeout in seconds (default: 24 hours)
SESSION_TIMEOUT="86400"

# Rate limiting
RATE_LIMIT_MAX="100"
RATE_LIMIT_WINDOW="900000"

# ===========================================
# CONFIGURAÇÕES DE DESENVOLVIMENTO
# ===========================================

# Para desenvolvimento local com Supabase:
# DATABASE_URL="postgresql://username:password@localhost:5432/sisiago?schema=public"